#!/bin/bash
# Launcher for Terminal Dungeon

# Detect Linux + Ubuntu
if [[ "$OSTYPE" == "linux-gnu"* ]]; then
    if command -v apt-get &> /dev/null; then
        # Check if tree exists
        if ! command -v tree &> /dev/null; then
            echo "tree is not installed. Installing..."
            sudo apt-get update
            sudo apt-get install -y tree
        fi
    fi
fi

# Ensure the JAR exists
JAR_FILE="./terminaldungeon-1.0.jar"
if [ ! -f "$JAR_FILE" ]; then
    echo "JAR file not found! Did you run install.sh?"
    exit 1
fi

# Run the game
java -jar "$JAR_FILE"
